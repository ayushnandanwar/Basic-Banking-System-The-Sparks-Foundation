doctype html
html(lang="en") 
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Transactions | Basic Banking System | Spark Foundation
        style 
            include ../public/style.css
    body 
        header 
            nav
                a(href='/') Home
                a(href='/customers') Customers
                a(href='/transactions').at Transactions
            div= "Basic Banking System "
                span The Spark Foundation
        section.cust-head 
            div= "Transaction Count: "+count
        section.customers
            div.table-scroll
                table 
                    tr 
                        td Sr. No 
                        td Transaction Date
                        td Transaction Number 
                        td Debited From
                        td Credited to 
                        td Amount Transfered
                    each transaction,i in transactions
                        tr
                            td= i + 1
                            td= transaction.trans_date.toLocaleString(undefined, {timeZone: 'Asia/Kolkata'})
                            td= transaction.transaction_no 
                            td= customers[i].customerfrom.name + ` (${customers[i].customerfrom.account_no})` 
                            td= customers[i].customerto.name + ` (${customers[i].customerto.account_no})`  
                            td= "Rs."+transaction.amount +"/-"
