doctype html
html(lang="en") 
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Customers | Basic Banking System | Spark Foundation
        style 
            include ../public/util.css
            include ../public/style.css
    body 
        header 
            nav
                a(href='/') Home
                a(href='/customers').at Customers
                a(href='/transactions') Transactions
            div= "Basic Banking System "
                span The Spark Foundation
        section.cust-head 
            div= "Customer Count: "+count
        section.customers 
            div.table-scroll
                table 
                    tr 
                        td Sr. No 
                        td Account Number 
                        td Customer Name 
                        td Customer email 
                        td Current Balance 
                        td View
                    each customer,i in customers
                        tr
                            td= i + 1
                            td= customer.account_no 
                            td= customer.name 
                            td= customer.email 
                            td= "Rs."+customer.current_balance +"/-"
                            td 
                                a(href=`customers/${customer._id}`).btn.btn-view View
